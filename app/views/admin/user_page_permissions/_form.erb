<% content_for :head do %>
  <script type="text/javascript">
    user_autocomplete_url = '<%= admin_users_path(:format => 'json') %>';
  </script>
<% end %>

<%= current_object.errors.full_messages %>

<fieldset>
  <p>
    <%= label_tag :user_name, 'User' %>
    <%= text_field_tag :user_name, '', :class => 'user_autocomplete' %>
		<%= f.hidden_field :user_identifier, :class => 'user_id_field' %>
  </p>
  <p>
    <label>
      <%= f.check_box :edit %>
      Add/edit content?
      <%= f.error_message_on :edit %>
    </label>
  </p>
  <p>
    <label>
      <%= f.check_box :publish %>
      Publish content?
      <%= f.error_message_on :publish %>
    </label>
  </p>

  <%= render 'admin/generic/resource_buttons' %>

</fieldset>
